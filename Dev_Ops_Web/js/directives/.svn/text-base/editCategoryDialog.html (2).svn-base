<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div ng-controller="addCategoryCtrl" id="editCategoryModal" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span class="modal-title headingModalTitle">Edit Category</span>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <div class="form-group">
            <div class="editModalFields">Category Name:</div>
            <input type="text" ng-model="model.modelCategoryName" class="form-control" >
          </div>
          <div class="form-group">
            <div class="editModalFields">Weightage:</div>
            <input type="text" ng-model="model.modelWeightage" class="form-control" only-digits maxlength="3">
          </div>

          <div class="form-group">
            <div class="editModalFields">Assessment Area:</div>
            <select ng-model="model.modelAssessmentID" class="form-control">
              <option ng-repeat="x in model.modelAssessmentAreaList" value="{{x.assessmentId }}" >{{x.assessmentAreaName}}</option>
            </select>
          </div>
        </div>
        <div ng-show="model.error">
          <span style="color: red">ERROR !! Total Weightage is greater than 100%. Please check and re-enter the value!</span>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <button ng-click="editCategoryDialog.close()" class="addBtnModal" >
              Save
            </button>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <button type="button" class="addBtnModal" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>