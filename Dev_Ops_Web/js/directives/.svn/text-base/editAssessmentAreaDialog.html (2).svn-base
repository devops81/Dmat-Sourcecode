<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div ng-controller="addAssessmentAreaCtrl" id="editAssessmentModal" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <span class="modal-title headingModalTitle">Edit Assessment Area</span>
      </div>
      <form name="myForm">
      <div class="modal-body">
        <div class="form-group">
          <div class="editModalFields">Assessment Area Name:</div>
          <input ng-model="model.modelAssessmentAreaName" class="form-control" name="modelAssessmentAreaName"
                 ng-minlength="5" ng-maxlength="50" ng-pattern="/[A-z0-9-]$/" required>
                        <span style="color:red;" ng-show="
                           myForm.modelAssessmentAreaName.$error.pattern || myForm.modelAssessmentAreaName.$error.minlength ||
                            myForm.modelAssessmentAreaName.$error.maxlength">Use Appropriate Assessment Area Name</span>

        </div>
        <div class="form-group">
          <div class="editModalFields">Weightage:</div>
          <input type="text" ng-model="model.modelWeightage" class="form-control" only-digits maxlength="3" required>
        </div>
        <div ng-show="model.error">
          <span style="color: red">
            This Assessment Area cannot be added as the total weight sums out to be greater than 100.
          </span>
        </div>
      </div>
      <div class="modal-footer">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <button ng-click="editAssessmentDialog.close()" class="addBtnModal btn" ng-disabled="myForm.$invalid">
              Save
            </button>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <button type="button" class="addBtnModal" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>