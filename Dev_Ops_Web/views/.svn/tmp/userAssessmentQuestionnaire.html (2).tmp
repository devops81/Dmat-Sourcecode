                                <input-stars max="1" ng-if="assessment.scoreUser == 1" ng-model="assessment.scoreUser" ></input-stars>
                                <input-stars max="1" ng-if="assessment.scoreUser != 1" ng-model="noneSelect"></input-stars>
                                </br>
